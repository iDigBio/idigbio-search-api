{
  "checkbuild": {
    "enable": ["jshint", "jscs", "buddyjs", "nsp"]
  },

  "jshint": {
    "args": ["app/lib/*.js","app/controllers/*.js"]
  },

  "jscs": {
    "args": ["app/lib/*.js","app/controllers/*.js"]
  },

  "jsinspect": {
    "args": ["app/lib/*.js","app/controllers/*.js"],
    "diff": true
  },

  "buddyjs": {
    "args": ["app/lib/*.js","app/controllers/*.js"],
    "ignore": [0, 1, 2, 3, 200, 404, 400, 180, 360]
  },

  "nsp": {}
}
